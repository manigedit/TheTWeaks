<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background"
             tools:context=".LoginActivity">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/maintext"
                android:id="@+id/relativeLayout1"

        >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    app:layout_constraintStart_toStartOf="parent"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/email" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:hint="some@tweaks.com"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:layout_editor_absoluteY="276dp" android:inputType="textEmailAddress"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="11dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" tools:layout_editor_absoluteX="0dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout1" android:id="@+id/relativeLayout2"

        >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    app:layout_constraintStart_toStartOf="parent"
                    android:drawableLeft="@drawable/lock"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/password" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:hint="*********"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:layout_editor_absoluteY="333dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <TextView
                android:text="TheTweaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/maintext" android:textSize="50sp" app:fontFamily="sans-serif-black"

                android:textColor="#ffff" android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/login_button"
                android:background="@drawable/button_edit"

                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="Forgot password?"
                android:layout_width="155dp"
                android:layout_height="31dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView2" app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/login_button" android:textSize="18sp"/>
        <TextView
                android:text="Create your Account âŸ¶"
                android:layout_width="230dp"
                android:layout_height="33dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="100dp" android:layout_marginStart="100dp"
                app:layout_constraintHorizontal_bias="0.299" android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
