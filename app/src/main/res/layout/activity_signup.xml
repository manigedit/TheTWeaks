<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Activities.SignupActivity">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">



        <TextView
                android:text="TheTweaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/maintext"
                android:textSize="50sp"
                app:fontFamily="sans-serif-black"

                android:textColor="#ffff" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/sign_up_button"
                android:background="@drawable/button_edit"

                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="62dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="20dp"/>

        <LinearLayout android:layout_width="match_parent"
                      app:layout_constraintTop_toBottomOf="@id/maintext"
                      android:background="#607D8B"
                      android:id="@+id/layout1"
                      android:orientation="vertical"
                      android:layout_margin="5dp"
                      android:weightSum="1"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:textSize="30dp"
                      android:layout_marginBottom="32dp"
                      android:text="Create User Account"
                      android:textColor="@android:color/background_light"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:weightSum="1"
                            android:orientation="horizontal">
                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_text"
                        android:ems="10"
                        android:id="@+id/firstname"
                         android:hint="First Name"
                        android:gravity="center"
                        android:inputType="text"
                        android:layout_marginBottom="11dp"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_text"
                        android:layout_marginLeft="40dp"
                        android:ems="10"
                        android:id="@+id/lastname"
                        android:hint="Last Name"
                        android:gravity="center"
                        android:inputType="text"
                        android:layout_marginBottom="11dp"/>

            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="2dp"
                      android:layout_gravity="center_horizontal"
                      android:textColor="@android:color/background_light"
                      android:text="@string/username_prompt"  />
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:weightSum="1"
                          android:layout_height="wrap_content">

            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:id="@+id/username"
                    android:hint="Username"
                    android:gravity="center"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"/>

                <TextView android:layout_width="0dp"
                          android:layout_weight="0.29"
                          android:gravity="center"
                          android:layout_marginRight="10dp"
                          android:textSize="24dp"
                          android:textStyle="bold"
                          android:background="@android:color/background_light"
                          android:layout_height="40dp"
                            android:text="_tweaks"/>

            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:textColor="@android:color/darker_gray"
                      android:text="Create a unique and simple username."
                      android:textSize="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginBottom="15dp"
                      android:layout_height="20dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:id="@+id/email"
                    android:hint="Email Address"
                    android:gravity="center"
                    android:inputType="textEmailAddress"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="20dp"
                      android:layout_marginLeft="15dp"
                      android:textSize="15dp"
                      android:layout_marginBottom="15dp"
                      android:textColor="@android:color/darker_gray"
                        android:text="We'll send you an activation link."/>



            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:gravity="center"
                    android:inputType="textWebPassword"/>





        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <Button
                    android:layout_width="200dp"
                    android:background="#66BB6A"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/sign_in_button"
                    android:layout_gravity="center"
                    android:text="Login"
                    android:layout_margin="2dp"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="200dp"
                    android:text="Reset"
                    android:id="@+id/btn_reset_password"
                    android:textAllCaps="false"
                    android:background="#66BB6A"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="200dp"
                    android:text="About"
                    android:id="@+id/btn_about"
                    android:textAllCaps="false"
                    android:layout_height="50dp"
                    android:background="#66BB6A"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="200dp"
                    android:text="Contact"
                    android:id="@+id/btn_contact"
                    android:textAllCaps="false"
                    android:layout_height="50dp"
                    android:background="#66BB6A"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>





    </android.support.constraint.ConstraintLayout>



</FrameLayout>