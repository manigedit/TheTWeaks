<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/background"
        android:layout_gravity="center"
        tools:context=".Activities.ResetPasswordActivity">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/maintext"
                android:id="@+id/relativeLayoutsignup"

        >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    app:layout_constraintStart_toStartOf="parent"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/email"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:hint="some@tweaks.com"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:layout_editor_absoluteY="276dp"
                    android:inputType="textEmailAddress"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"/>
        </RelativeLayout>

        <TextView
                android:text="TheTweaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/maintext"
                android:textSize="50sp"
                app:fontFamily="sans-serif-black"

                android:textColor="#ffff" android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Reset Password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/btn_reset_password"
                android:background="@drawable/button_edit"

                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutsignup"
                android:layout_marginTop="20dp"/>

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/btn_reset_password"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginTop="40dp"
                android:text="Back"
                android:textAllCaps="false"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:id="@+id/btn_back"/>


    </android.support.constraint.ConstraintLayout>



</FrameLayout>