<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Topic of the News Goes Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Topic"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold" android:textAllCaps="false"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/post_detail"/>
    <TextView
            android:text="Name goes here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Profile_name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toEndOf="@+id/profile_photo" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/post_detail"/>
    <TextView
            android:text="Student Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_info"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/profile_photo" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/Profile_name"/>
    <TextView
            android:text=". 50 views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/views"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            app:layout_constraintBaseline_toBaselineOf="@+id/student_info"
            app:layout_constraintStart_toEndOf="@+id/student_info" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateOfPost" app:layout_constraintStart_toEndOf="@+id/views"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            app:layout_constraintBaseline_toBaselineOf="@+id/views"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/space2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.01" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/bussiness"
            android:id="@+id/post_image" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/space"/>
    <TextView
            android:text="here will be the detail of the post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/post_detail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/post_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_photo"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upvote"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="#000000" app:layout_constraintBaseline_toBaselineOf="@+id/textView10"/>
    <TextView
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintBaseline_toBaselineOf="@+id/upvote"
            app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toEndOf="@+id/upvote"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/upvote"/>
    <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:visibility="visible"
            android:id="@+id/space2"/>
    <Space
            android:layout_width="237dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/Topic" android:id="@+id/space"/>
</android.support.constraint.ConstraintLayout>