<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:text="Test Topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Topic" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textColor="@color/design_default_color_primary"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/profile_img" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Topic" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Profile_Name" app:layout_constraintStart_toEndOf="@+id/profile_img"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Topic" android:textSize="12sp"
            android:textColor="@color/design_default_color_primary"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="220dp" app:srcCompat="@drawable/edu2"
            android:id="@+id/post_img"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="30 Jan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintStart_toEndOf="@+id/Profile_Name"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Profile_Name"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/post_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/post_img" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/post_detail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/textView29"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upvotes" app:layout_constraintStart_toEndOf="@+id/textView29"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView29"/>
    <TextView
            android:text="Downvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/upvotes"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/upvotes" android:id="@+id/textView33"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downVotes"
            app:layout_constraintStart_toEndOf="@+id/textView33"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView33"/>
    <TextView
            android:text="Response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/downVotes"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/downVotes"/>
    <TextView
            android:text="Edit"
            android:drawableLeft="@drawable/images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView29" android:id="@+id/edit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="delete"
            android:drawableLeft="@drawable/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView33" app:layout_constraintStart_toEndOf="@+id/edit"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
    <Space
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editp" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>