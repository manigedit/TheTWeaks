<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/layout1"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="category"
                android:layout_margin="2dp"
                android:textSize="8dp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/background_light"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:textSize="10dp"
                    android:text="|"
                  style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@android:color/black"/>

        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_height="15dp"
                android:text="Location"
                android:layout_margin="2dp"
                android:textSize="8dp"
                android:textColor="@android:color/holo_green_dark"
                android:background="@android:color/background_light"/>


    </LinearLayout>
    <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent" android:layout_height="60dp"
                   android:src="@android:drawable/ic_menu_gallery"
                   android:layout_margin="2dp"
                   android:scaleType="fitCenter"/>
        <TextView
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                  android:layout_alignBottom="@id/post_image"
                  android:layout_margin="2dp"
                android:text="Post text here"
                android:textSize="15dp"
                  android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btShowmore"
                android:layout_width="wrap_content"
                android:text="Readmore..."
                android:textSize="8dp"
                android:textAllCaps="false"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/post_content"
                android:textColor="@android:color/holo_green_dark"
                android:background="@android:color/transparent"
                android:layout_height="10dp" />

    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/layout3"
                  android:orientation="horizontal"
                  app:layout_constraintTop_toBottomOf="@id/layout2"
                  android:layout_height="10dp">
        <ImageView android:layout_width="10dp"
                   android:id="@+id/profile_img"
                   android:layout_margin="2dp"
                   android:src="@android:drawable/ic_menu_camera"
                   android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/Profile_name"
                android:layout_width="wrap_content"
                android:text="tweaker's name"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_gravity="center"
                android:src="@android:drawable/radiobutton_on_background"
                android:layout_width="5dp"
                android:layout_height="5dp"/>

        <TextView
                android:id="@+id/Profile_name"
                android:layout_width="wrap_content"
                android:text="n tweak views"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_gravity="center"
                android:src="@android:drawable/radiobutton_on_background"
                android:layout_width="5dp"
                   android:layout_height="5dp"/>
        <TextView
                android:id="@+id/Profile_name"
                android:layout_width="wrap_content"
                android:text="tweak date"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="."
                  android:textColor="@android:color/black"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>