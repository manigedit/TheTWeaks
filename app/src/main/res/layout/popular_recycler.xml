<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:background="#ffff">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/community"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/img" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Deepak Singh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:id="@+id/commName"
            android:textColor="#000000" app:layout_constraintStart_toEndOf="@+id/img"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commDesg" app:layout_constraintStart_toEndOf="@+id/img"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/commName"/>
    <TextView
            android:text="Banglore,Karnataka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comm_location" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/commDesg"
            app:layout_constraintStart_toEndOf="@+id/img" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp" android:id="@+id/commView"/>
    <TextView
            android:text="Total Views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/commView"/>
    <Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img"/>
</android.support.constraint.ConstraintLayout>