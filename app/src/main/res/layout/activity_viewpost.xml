<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.viewpostActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Upvote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView45" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewpost_content" android:textColor="#000000"/>
                <TextView
                        android:text="Responses"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:id="@+id/textView49" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView45"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="#000000"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_date" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/textView40" android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView40" android:textColor="#000000"/>
                <ImageView
                        android:src="@drawable/academic"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/imageView10"
                        app:layout_constraintTop_toBottomOf="@+id/viewpost_views"/>
                <TextView
                        android:text="views  ."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView40" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/viewpost_views" android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/viewpost_views" android:textColor="#000000"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_content" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView10" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_name" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView9" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewpost_location" android:textColor="#000000"
                        android:textStyle="bold"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_location" android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@+id/textView30"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView30"
                        android:textColor="@android:color/holo_green_light" android:textSize="10sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_topic" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView9"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="#000000"
                        android:textSize="18sp" android:textStyle="bold"/>
                <TextView
                        android:text="Response"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView47"
                        app:layout_constraintBaseline_toBaselineOf="@+id/viewpost_upvote"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/viewpost_upvote"
                        android:textColor="#000000"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" tools:src="@tools:sample/avatars"
                        android:id="@+id/imageView9"
                        app:layout_constraintTop_toBottomOf="@+id/viewpost_category"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_info" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView9" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewpost_name"/>
                <TextView
                        android:text="|"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView30" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/viewpost_category"
                        android:textColor="@android:color/holo_green_light"
                        app:layout_constraintBaseline_toBaselineOf="@+id/viewpost_category" android:textSize="10sp"/>
                <TextView
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView48" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/textView47" android:textColor="#000000"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView47"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                        android:id="@+id/viewpost_category"
                        android:textColor="@android:color/holo_green_light" android:textSize="10sp"/>
                <TextView
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" android:id="@+id/viewpost_views" android:textSize="12sp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/viewpost_topic"
                        android:textColor="#000000"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewpost_upvote" android:layout_marginLeft="9dp"
                        android:layout_marginStart="9dp"
                        app:layout_constraintStart_toEndOf="@+id/textView45"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView45" android:textColor="#000000"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView49"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="8dp" android:id="@+id/comment_recycler"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>